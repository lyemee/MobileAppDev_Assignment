<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unimeme">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemeApp">

        <!-- 런처 액티비티: intent-filter가 있으므로 exported를 반드시 명시 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- intent-filter가 없다면 exported 생략 가능(기본값=false 취급) -->
        <activity android:name=".ForYouActivity" />
        <activity android:name=".LeaderboardActivity" />
        <activity android:name=".AccountActivity" />
    </application>
</manifest>