<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:padding="@dimen/m_lg"
        android:gravity="center_horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical" android:padding="@dimen/m_lg"
            android:layout_width="@dimen/max_content_width" android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:contentDescription="@string/logo_desc"
                android:layout_width="128dp" android:layout_height="128dp"/>

            <TextView
                android:text="@string/login_title" android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_md"/>

            <EditText
                android:id="@+id/etEmail"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_md"/>

            <CheckBox
                android:id="@+id/cbAutoLogin"
                android:text="@string/label_auto_login"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_sm"/>

            <TextView
                android:id="@+id/tvGeoStatus"
                android:text="@string/label_geofence_inside"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_sm"/>

            <Button
                android:id="@+id/btnLogin"
                android:text="@string/btn_login"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_md"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
