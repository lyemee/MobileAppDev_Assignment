<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="@dimen/p_screen"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:text="@string/title_feed"
        android:textStyle="bold"
        android:textSize="@dimen/t_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_marginTop="@dimen/m_sm"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGoAccount"
            android:text="@string/btn_account"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnGoLeaderboard"
            android:text="@string/btn_leaderboard"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:layout_marginStart="@dimen/m_sm"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:text="@string/btn_logout"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_md"/>

    <TextView
        android:id="@+id/tvPlaceholder"
        android:text="@string/feed_placeholder"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_md"/>
</LinearLayout>
